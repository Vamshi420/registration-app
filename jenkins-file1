pipeline {
    agent any

    tools {
        maven 'maven'
        jdk 'jdk17'
    }

    stages {

        stage('git checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Vamshi420/registration-app.git'
            }
        }

        stage('build') {
            steps {
                sh "mvn clean install -DskipTests"
            }
        }

        stage('sonarqube-analysis') {
            environment {
                scannerHome = tool 'sonar-scanner'
            }
            steps {
                withSonarQubeEnv('sonar') {
                    sh '''
                        ${scannerHome}/bin/sonar-scanner \
                        -Dsonar.projectKey=registration-app \
                        -Dsonar.projectName=registration-app \
                        -Dsonar.sources=. \
                        -Dsonar.java.binaries=server/target/classes \
                        -Dsonar.java.libraries=server/target/*.jar
                    '''
                }
            }
        }

        stage('deploy') {
            steps {
                sh '''
                    curl -u tomcat:tomcat \
                    --upload-file webapp/target/webapp.war \
                    "http://13.127.115.201:8080/manager/text/deploy?path=/registration-app&update=true"
                '''
            }
        }

    }
}
